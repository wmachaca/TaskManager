# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Language-specific overrides
[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.md]
trim_trailing_whitespace = false  # Preserve trailing spaces in markdown
max_line_length = 80              # Recommended for markdown

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab  # Makefiles require actual tabs

# SQL files (for your Prisma migrations)
[*.sql]
indent_size = 2

# Configuration files
[.eslintrc]
indent_size = 2

[.prettierrc]
indent_size = 2

[.babelrc]
indent_size = 2

# Git files
[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2
